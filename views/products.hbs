<!-- index.hbs -->
<header>
    <h1>Kapow! Comics - Product Details</h1>
</header>
<nav>
    <a href="/">Home</a>
    <a href="customers">Customers</a>
    <a href="salesDetails">Sales Details</a>
    <a href="suppliers">Suppliers</a>
    <a href="products">Products</a>
</nav>

{{!-- Create a table --}}
<table id="products-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the sale_id, product_id, unit_price, and quantity, in order --}}
        {{#each data}}
        <tr data-value={{this.product_id}}>
            <td>{{this.product_id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.product_price}}</td>
            <td>{{this.product_type}}</td>
            <td>{{this.supplier_id}}</td>
            <td><button onclick="deleteSaleDetails({{this.product_id}})">Delete</button></td>
        </tr>
        {{/each}}
        
    </tbody>
</table>


<h2>Search Using an HTML Form</h2>
<p>Search by the product name using the field below!</p>
<form id="search-product_name-html" method='GET' action='/products'>
    <label for="input-product_name">Search by product name : </label>
    <input type="text" name="product_name" id="input-product_name-html-search">
    
    <input type="submit">
    <a href='/products'><button>Reset</button></a>
</form>




{{!-- Form to add a record to the table  --}}
<h2>Adding Data</h2>
<p>To add new sale details, please enter the information below and click 'Submit'!</p>


<form id="add-products-form-ajax">

    <label for="input-product_name">Product Name: </label>
    <input type="text" name="input-products_name" id="input-products_name">

    <label for="input-product_price">Product Price: </label>
    <input type="text" name="input-products_price" id="input-products_price">

    <label for="input-product_type">Product Type: </label>
    <input type="Text" name="input-products_type" id="input-products_type">

    <select name="input-supplier_id" id="input-supplier_id">
        <option value="">Select Supplier</option>
        <option value="-1">In-House- No Supplier ID</option>
        {{#each suppliers}}
        <option value="{{this.supplier_id}}">{{this.supplier_name}}</option>
        {{/each}}
    </select>   


    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_products.js"></script>