{{!-- Create a table --}}
<table id="salesDetails-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the sale_id, product_id, unit_price, and quantity, in order --}}
        {{#each data}}
        <tr data-value={{this.invoice_id}}>
            <td>{{this.invoice_id}}</td>
            <td>{{this.sale_id}}</td>
            <td>{{this.product_id}}</td>
            <td>{{this.unit_price}}</td>
            <td>{{this.quantity}}</td>
            <td><button onclick="deleteSaleDetails({{this.invoice_id}})">Delete</button></td>
        </tr>
        {{/each}}
        
    </tbody>
</table>


